<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2563EB"
    android:padding="32dp">

    <!-- Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target_icon"
        android:textSize="80sp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Your Habits"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build healthy routines with visual progress tracking and streak counters"
        android:textColor="#E2E8F0"
        android:textSize="16sp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_gravity="center" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Next"
        android:textColor="#2563EB"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/btn_white_rounded"
        android:layout_marginTop="32dp" />

</LinearLayout>