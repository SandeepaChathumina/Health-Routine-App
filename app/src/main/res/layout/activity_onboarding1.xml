<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="32dp"
    android:gravity="center_horizontal">

    <!-- Top Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <!-- Main Content Container - Centered -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="60dp">

        <!-- Habit Image - Large and Centered -->
        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/habbit"
            android:scaleType="centerInside"
            android:layout_marginBottom="40dp"
            android:contentDescription="@string/track_your_habits" />

        <!-- Title with Beautiful Typography -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/track_your_habits"
            android:textColor="#1E3A8A"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Subtitle with Better Spacing -->
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/build_healthy_routines_with_visual_progress_tracking_and_streak_counters"
            android:textColor="#64748B"
            android:textSize="16sp"
            android:textAlignment="center"
            android:lineSpacingExtra="8dp"
            android:layout_marginBottom="40dp" />

        <!-- Progress Dots with Enhanced Design -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/dot_active"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/dot_inactive"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/dot_inactive" />

        </LinearLayout>

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <!-- Enhanced Next Button - Moved Up -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/next"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="#4C6AFD"
        android:elevation="4dp"
        android:layout_marginBottom="32dp"
        app:cornerRadius="28dp"
        style="@style/Widget.Material3.Button" />

</LinearLayout>