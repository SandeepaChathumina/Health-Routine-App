<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4C6AFD"
    android:padding="32dp"
    android:gravity="center_horizontal">

    <!-- Top Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <!-- Icon Container -->
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_circle_white_transparent"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_imoji"
            android:textSize="48sp" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_your_habits"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/build_healthy_routines_with_visual_progress_tracking_and_streak_counters"
        android:textColor="#E2E8F0"
        android:textSize="16sp"
        android:textAlignment="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginBottom="40dp" />

    <!-- Progress Dots -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_active" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_inactive"
            android:layout_marginStart="8dp" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_inactive"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Next Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/next"
        android:textColor="#4C6AFD"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#FFFFFF"
        android:elevation="2dp"
        android:layout_marginTop="32dp"
        style="@style/Widget.Material3.Button" />

</LinearLayout>