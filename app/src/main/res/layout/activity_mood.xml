<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:paddingTop="24dp">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mood_journal"
                        android:textSize="28sp"
                        android:textColor="#1E3A8A"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/track_your_emotional_wellness"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_add_mood"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded_blue"
                    android:contentDescription="@string/plusicon"
                    android:src="@drawable/ic_plus"
                    app:tint="#FFFFFF"/>
            </LinearLayout>

            <!-- Quick Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Entries This Month -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/calendericon"
                            android:src="@drawable/ic_calendar"
                            app:tint="#4C6AFD"
                            android:background="@drawable/bg_circle_light_blue"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_entries_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_47"
                            android:textSize="20sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/entries_this_month"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Most Common Mood -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/staticon"
                            android:src="@drawable/ic_trending_up"
                            app:tint="#10B981"
                            android:background="@drawable/bg_circle_light_green"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_most_common_mood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/happyface"
                            android:textSize="20sp"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/most_common_mood"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Day Streak -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/staricon"
                            android:src="@drawable/ic_star"
                            app:tint="#F59E0B"
                            android:background="@drawable/bg_circle_light_orange"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_day_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_12"
                            android:textSize="20sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_streak"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Mood Distribution -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mood_distribution"
                            android:textSize="18sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_view_insights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_insights"
                            android:textSize="14sp"
                            android:textColor="#4C6AFD"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <!-- Happy Mood -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/happy_face"
                                android:textSize="20sp"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/happy"
                                android:textSize="16sp"
                                android:textColor="#1E3A8A"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_happy_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_15_times"
                                android:textSize="14sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_happy"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="75"
                            android:progressTint="#10B981"
                            android:backgroundTint="#E2E8F0"/>
                    </LinearLayout>

                    <!-- Calm Mood -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/calmface"
                                android:textSize="20sp"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/calm"
                                android:textSize="16sp"
                                android:textColor="#1E3A8A"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_calm_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_10_times"
                                android:textSize="14sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_calm"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="50"
                            android:progressTint="#8B5CF6"
                            android:backgroundTint="#E2E8F0"/>
                    </LinearLayout>

                    <!-- Stressed Mood -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/stressface"
                                android:textSize="20sp"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/stressed"
                                android:textSize="16sp"
                                android:textColor="#1E3A8A"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_stressed_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_5_times"
                                android:textSize="14sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_stressed"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="25"
                            android:progressTint="#EF4444"
                            android:backgroundTint="#E2E8F0"/>
                    </LinearLayout>

                    <!-- Excited Mood -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exiteface"
                                android:textSize="20sp"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/excited"
                                android:textSize="16sp"
                                android:textColor="#1E3A8A"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_excited_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_6_times"
                                android:textSize="14sp"
                                android:textColor="#64748B"/>
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_excited"
                            android:layout_width="match_parent"
                            android:layout_height="6dp"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:progress="30"
                            android:progressTint="#F59E0B"
                            android:backgroundTint="#E2E8F0"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Actions -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/quick_actions"
                android:textSize="18sp"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Mood Patterns -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_mood_patterns"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/herticon"
                            android:src="@drawable/ic_heart"
                            app:tint="#EC4899"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mood_patterns"
                            android:textSize="14sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Calendar View -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_calendar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/calendericon"
                            android:src="@drawable/ic_calendar"
                            app:tint="#4C6AFD"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/calendar_view"
                            android:textSize="14sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Mood History Section -->
            <TextView
                android:id="@+id/tv_mood_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recent_mood_entries"
                android:textSize="18sp"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_mood_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/moodicon"
                    android:src="@drawable/ic_mood"
                    android:alpha="0.5"
                    app:tint="#64748B"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_mood_entries_yet"
                    android:textSize="16sp"
                    android:textColor="#64748B"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tap_the_button_to_add_your_first_mood_entry"
                    android:textSize="14sp"
                    android:textColor="#94A3B8"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Component -->
    <include layout="@layout/layout_bottom_navigation"/>
</LinearLayout>