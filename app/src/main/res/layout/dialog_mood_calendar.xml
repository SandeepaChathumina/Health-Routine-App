<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Calendar Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageButton
            android:id="@+id/btn_prev_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/chevron_left"
            android:src="@drawable/ic_chevron_left"
            android:background="@drawable/bg_rounded_white"
            app:tint="#4C6AFD"/>

        <TextView
            android:id="@+id/tv_month_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textSize="18sp"
            android:textColor="#1E3A8A"
            android:textStyle="bold"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btn_next_month"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/chevron_right"
            android:src="@drawable/ic_chevron_right"
            android:background="@drawable/bg_rounded_white"
            app:tint="#4C6AFD"/>

    </LinearLayout>

    <!-- Days of Week Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sun"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mon"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/tue"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/wed"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/thu"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/fri"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sat"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- Calendar Grid -->
    <LinearLayout
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/bg_calendar_grid"
        android:padding="8dp"
        android:minHeight="300dp"/>

    <!-- Selected Day Info -->
    <LinearLayout
        android:id="@+id/selected_day_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_selected_day"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#1E3A8A"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_selected_mood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="#4C6AFD"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_selected_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="14sp"
                android:textColor="#64748B"
                android:layout_marginStart="12dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Legend -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mood_legend"
            android:textSize="14sp"
            android:textColor="#1E3A8A"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/excitedimoji"
                android:textSize="12sp"
                android:textColor="#64748B"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/happyemoji"
                android:textSize="12sp"
                android:textColor="#64748B"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/calmemoji"
                android:textSize="12sp"
                android:textColor="#64748B"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/neutralemojo"
                android:textSize="12sp"
                android:textColor="#64748B"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tiredemoji"
                android:textSize="12sp"
                android:textColor="#64748B"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/stressedemoji"
                android:textSize="12sp"
                android:textColor="#64748B"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/sademoji"
                android:textSize="12sp"
                android:textColor="#64748B"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/angryemoji"
                android:textSize="12sp"
                android:textColor="#64748B"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
