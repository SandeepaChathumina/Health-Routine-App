<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F59E0B"
    android:padding="32dp"
    android:gravity="center_horizontal">

    <!-- Top Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <!-- Icon Container -->
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg_circle_white_transparent"
        android:gravity="center"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/droplet_emoji"
            android:textSize="48sp" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stay_hydrated"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/get_personalized_reminders_and_track_your_daily_water_intake"
        android:textColor="#E2E8F0"
        android:textSize="16sp"
        android:textAlignment="center"
        android:lineSpacingExtra="6dp"
        android:layout_marginBottom="40dp" />

    <!-- Progress Dots -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_inactive" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_inactive"
            android:layout_marginStart="8dp" />

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/dot_active"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <!-- Previous Button (Outline) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/previous"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="@android:color/transparent"
            android:strokeColor="#FFFFFF"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Get Started Button (Solid with Icon) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get_started"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#FFFFFF"
            android:elevation="2dp"
            android:text="@string/get_started"
            android:textColor="#F59E0B"
            android:textSize="16sp"
            android:textStyle="bold"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"
            app:iconTint="#F59E0B" />

    </LinearLayout>

</LinearLayout>