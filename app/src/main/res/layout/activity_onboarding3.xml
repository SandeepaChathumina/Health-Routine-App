<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F59E0B"
    android:padding="32dp">

    <!-- Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ’§"
        android:textSize="80sp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="40dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stay Hydrated"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Subtitle -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get personalized reminders and track your daily water intake"
        android:textColor="#E2E8F0"
        android:textSize="16sp"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_gravity="center" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <!-- Previous Button -->
        <Button
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Previous"
            android:textColor="#F59E0B"
            android:textSize="16sp"
            android:background="@drawable/btn_white_rounded"
            android:layout_marginEnd="8dp" />

        <!-- Get Started Button -->
        <Button
            android:id="@+id/btn_get_started"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Get Started"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/btn_orange_rounded"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>