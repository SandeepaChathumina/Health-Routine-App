<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="32dp"
    android:gravity="center_horizontal">

    <!-- Top Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <!-- Main Content Container - Centered -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="60dp">

        <!-- Water Image - Large and Centered -->
        <ImageView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/water"
            android:scaleType="centerInside"
            android:layout_marginBottom="40dp"
            android:contentDescription="@string/stay_hydrated" />

        <!-- Title with Beautiful Typography -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stay_hydrated"
            android:textColor="#1E3A8A"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp"
            android:gravity="center" />

        <!-- Subtitle with Better Spacing -->
        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:text="@string/get_personalized_reminders_and_track_your_daily_water_intake"
            android:textColor="#64748B"
            android:textSize="16sp"
            android:textAlignment="center"
            android:lineSpacingExtra="8dp"
            android:layout_marginBottom="40dp" />

        <!-- Progress Dots with Enhanced Design -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/dot_inactive"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/dot_inactive"
                android:layout_marginEnd="8dp" />

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/dot_active" />

        </LinearLayout>

    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <!-- Navigation Buttons - Enhanced -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp">

        <!-- Previous Button (Outline) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_previous"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/previous"
            android:textColor="#4C6AFD"
            android:textSize="18sp"
            android:backgroundTint="@android:color/transparent"
            android:strokeColor="#4C6AFD"
            android:strokeWidth="2"
            android:layout_marginEnd="8dp"
            app:cornerRadius="28dp"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Get Started Button (Solid with Icon) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_get_started"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="#4C6AFD"
            android:elevation="4dp"
            android:text="@string/get_started"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="28dp"
            app:iconGravity="textEnd"
            app:iconPadding="8dp"
            app:iconTint="#FFFFFF" />

    </LinearLayout>

</LinearLayout>