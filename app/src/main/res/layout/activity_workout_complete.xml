<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:paddingTop="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_rounded_white"
            android:src="@drawable/ic_arrow_back"
            app:tint="#64748B"
            android:contentDescription="@string/back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/workout_complete"
            android:textSize="20sp"
            android:textColor="#1E3A8A"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="48dp"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Celebration Animation Container -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <!-- Pulsing Circle Background -->
                <View
                    android:id="@+id/pulsing_circle"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:background="@drawable/bg_circle_pulse"
                    android:layout_gravity="center"
                    android:visibility="visible"/>

                <!-- Celebration Icon -->
                <LinearLayout
                    android:id="@+id/celebration_icon"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/bg_circle_light_blue"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:alpha="0.0"
                    android:scaleX="0.5"
                    android:scaleY="0.5">

                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/trophy"
                        app:tint="#4C6AFD"
                        android:contentDescription="@string/workout_complete"/>
                </LinearLayout>

            </FrameLayout>

            <!-- Congratulations Message -->
            <TextView
                android:id="@+id/tv_congratulations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/workout_complete"
                android:textSize="28sp"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:alpha="0.0"
                android:translationY="50dp"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/great_job_you_ve_completed_your_workout_routine_successfully"
                android:textSize="16sp"
                android:textColor="#64748B"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="48dp"
                android:paddingHorizontal="16dp"
                android:alpha="0.0"
                android:translationY="50dp"/>

            <!-- Stats Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/stats_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                android:alpha="0.0"
                android:translationY="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workout_summary"
                        android:textSize="18sp"
                        android:textColor="#1E3A8A"
                        android:textStyle="bold"
                        android:layout_marginBottom="24dp"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exercises"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tv_total_exercises"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_8"
                                android:textSize="24sp"
                                android:textColor="#4C6AFD"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:background="#E2E8F0"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/duration"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginBottom="4dp"/>

                            <TextView
                                android:id="@+id/tv_total_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_10_min"
                                android:textSize="24sp"
                                android:textColor="#4C6AFD"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Achievement Badge -->
                    <LinearLayout
                        android:id="@+id/achievement_badge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:background="@drawable/bg_rounded_light_blue"
                        android:padding="12dp"
                        android:alpha="0.0"
                        android:scaleX="0.8"
                        android:scaleY="0.8">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/staricon"
                            android:src="@drawable/ic_star"
                            app:tint="#4C6AFD"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/workout_champion"
                            android:textSize="14sp"
                            android:textColor="#4C6AFD"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Done Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_done"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/back_to_workouts"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#4C6AFD"
                app:icon="@drawable/ic_check"
                app:iconTint="#FFFFFF"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button"
                android:layout_marginBottom="24dp"
                android:alpha="0.0"
                android:translationY="30dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>