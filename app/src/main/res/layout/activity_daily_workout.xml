<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    android:paddingTop="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_rounded_white"
            android:src="@drawable/ic_arrow_back"
            app:tint="#64748B"
            android:contentDescription="@string/back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/daily_workout"
            android:textSize="20sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="48dp"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Workout Info Card - IMPROVED -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_workout_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#FFFFFF"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:id="@+id/tv_workout_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quick_morning_workout"
                        android:textSize="18sp"
                        android:textColor="#1E293B"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_workout_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="select_exercises_to_build_your_custom_workout"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/bg_circle_light_purple"
                            android:gravity="center"
                            android:layout_marginEnd="8dp">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="@string/workout_icon"
                                android:src="@drawable/ic_workout"
                                app:tint="#8B5CF6"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="tap_to_select_exercises"
                            android:textSize="14sp"
                            android:textColor="#8B5CF6" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Reset Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reset_workout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="reset_all_exercises"
                android:textColor="#64748B"
                android:textSize="14sp"
                android:backgroundTint="#FFFFFF"
                android:strokeColor="#E2E8F0"
                app:icon="@drawable/ic_refresh"
                app:iconTint="#64748B"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginBottom="16dp"/>

            <!-- Start Workout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_workout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Start Workout"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#10B981"
                app:icon="@drawable/ic_play"
                app:iconTint="#FFFFFF"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button"
                android:layout_marginBottom="24dp"
                android:visibility="gone"/>

            <!-- Today's Exercises Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/today_s_exercises"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_exercise_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 exercises"
                    android:textSize="14sp"
                    android:textColor="#64748B"/>
            </LinearLayout>

            <!-- Exercises Container - DYNAMIC -->
            <LinearLayout
                android:id="@+id/exercises_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp"/>

            <!-- Tips Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_rounded_light_blue"
                        android:padding="20dp"
                        android:backgroundTint="#F0F9FF">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="ðŸ’¡"
                                android:textSize="16sp"
                                android:layout_marginEnd="8dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/workout_tips"
                                android:textSize="16sp"
                                android:textColor="#2563EB"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/take_breaks_between_exercises_if_needed_n_focus_on_proper_form_over_speed_n_stay_hydrated_throughout_your_workout_n_listen_to_your_body_and_modify_as_needed"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:lineSpacingExtra="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>