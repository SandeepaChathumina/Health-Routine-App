<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:paddingTop="24dp">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/my_habits"
                        android:textSize="28sp"
                        android:textColor="#1E3A8A"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keep_building_healthy_routines"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_add_habit"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded_primary"
                    android:src="@drawable/ic_plus"
                    app:tint="#FFFFFF"
                    android:contentDescription="@string/add_new_habit"/>
            </LinearLayout>

            <!-- Categories Filter - IMPROVED BUTTONS -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="4dp">

                    <!-- All Button - Active State -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_all"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/all"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:backgroundTint="#4C6AFD"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button"/>

                    <!-- Health Button - Inactive State -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_health"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/health"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:backgroundTint="#FFFFFF"
                        android:strokeColor="#E2E8F0"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

                    <!-- Fitness Button - Inactive State -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_fitness"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/fitness"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:backgroundTint="#FFFFFF"
                        android:strokeColor="#E2E8F0"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

                    <!-- Mindfulness Button - Inactive State -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_mindfulness"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/mindfulness"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:backgroundTint="#FFFFFF"
                        android:strokeColor="#E2E8F0"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginEnd="8dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>

                    <!-- Work Button - Additional Category -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_work"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="@string/work"
                        android:textColor="#64748B"
                        android:textSize="13sp"
                        android:backgroundTint="#FFFFFF"
                        android:strokeColor="#E2E8F0"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>
                </LinearLayout>
            </HorizontalScrollView>

            <!-- Stats Overview - IMPROVED SPACING -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="24dp"
                    android:background="#FFFFFF">

                    <!-- Completed Today -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_light_blue"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/target_icon"
                                android:src="@drawable/ic_target"
                                app:tint="#4C6AFD"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_completed_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_3_5"
                            android:textSize="18sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/completed"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#E2E8F0"
                        android:layout_gravity="center"/>

                    <!-- Best Streak -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_light_orange"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/flame_icon"
                                android:src="@drawable/ic_flame"
                                app:tint="#F59E0B"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_best_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_12"
                            android:textSize="18sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/best_streak"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#E2E8F0"
                        android:layout_gravity="center"/>

                    <!-- Success Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_light_green"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/trending_up_icon"
                                android:src="@drawable/ic_trending_up"
                                app:tint="#10B981"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_success_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_85"
                            android:textSize="18sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/success_rate"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Habits List Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/your_habits"
                    android:textSize="18sp"
                    android:textColor="#1E3A8A"
                    android:fontFamily="sans-serif-medium"/>

                <TextView
                    android:id="@+id/tv_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sort_by_recent"
                    android:textSize="12sp"
                        android:textColor="#4C6AFD"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- RecyclerView for Habits List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_habits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp" />

            <!-- Empty State Layout -->
            <LinearLayout
                android:id="@+id/layout_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone">

                <!-- Empty State Illustration -->
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:cardCornerRadius="60dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_circle_light_blue"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_target"
                            app:tint="#4C6AFD"
                            android:contentDescription="No habits illustration"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Empty State Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No Habits Yet"
                    android:textSize="24sp"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <!-- Empty State Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start building healthy routines by creating your first habit. Small steps lead to big changes!"
                    android:textSize="16sp"
                    android:textColor="#64748B"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="32dp"/>

                <!-- Add First Habit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_first_habit"
                    android:layout_width="wrap_content"
                    android:layout_height="56dp"
                    android:text="Create Your First Habit"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:backgroundTint="#4C6AFD"
                    app:icon="@drawable/ic_plus"
                    app:iconTint="#FFFFFF"
                    app:iconPadding="8dp"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    style="@style/Widget.Material3.Button"/>

                <!-- Suggestions -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Popular habits: Drink water, Exercise, Meditate, Read"
                    android:textSize="14sp"
                    android:textColor="#94A3B8"
                    android:gravity="center"
                    android:layout_marginTop="16dp"/>
            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Component -->
    <include layout="@layout/layout_bottom_navigation"/>

    <!-- Fireworks Effect Overlay -->
    <com.example.healthapp.FireworksView
        android:id="@+id/fireworksView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</LinearLayout>