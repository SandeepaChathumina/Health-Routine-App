<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC"
    android:paddingTop="24dp">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp"> <!-- Increased margin -->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_habits"
                    android:textSize="28sp"
                    android:textColor="#1E293B"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/keep_building_healthy_routines"
                    android:textSize="14sp"
                    android:textColor="#64748B"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_add_habit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_rounded_primary"
                android:src="@drawable/ic_plus"
                app:tint="#FFFFFF"
                android:contentDescription="@string/add_new_habit"/>
        </LinearLayout>

        <!-- Categories Filter - IMPROVED BUTTONS -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <!-- All Button - Active State -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_all"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/all"
                android:textColor="#FFFFFF"
                android:textSize="13sp"
                android:backgroundTint="#2563EB"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button"/>

            <!-- Health Button - Inactive State -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_health"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/health"
                android:textColor="#64748B"
                android:textSize="13sp"
                android:backgroundTint="#FFFFFF"
                android:strokeColor="#E2E8F0"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Fitness Button - Inactive State -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_fitness"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/fitness"
                android:textColor="#64748B"
                android:textSize="13sp"
                android:backgroundTint="#FFFFFF"
                android:strokeColor="#E2E8F0"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Mindfulness Button - Inactive State -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_mindfulness"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/mindfulness"
                android:textColor="#64748B"
                android:textSize="13sp"
                android:backgroundTint="#FFFFFF"
                android:strokeColor="#E2E8F0"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_marginEnd="8dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

            <!-- Work Button - Additional Category -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_work"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="@string/work"
                android:textColor="#64748B"
                android:textSize="13sp"
                android:backgroundTint="#FFFFFF"
                android:strokeColor="#E2E8F0"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Stats Overview - IMPROVED SPACING -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Completed Today -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_light_blue"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/target_icon"
                android:src="@drawable/ic_target"
                app:tint="#2563EB"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_3_5"
            android:textSize="18sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completed"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#E2E8F0"
        android:layout_gravity="center"/>

    <!-- Best Streak -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_light_orange"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/flame_icon"
                android:src="@drawable/ic_flame"
                app:tint="#F59E0B"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_12"
            android:textSize="18sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/best_streak"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#E2E8F0"
        android:layout_gravity="center"/>

    <!-- Success Rate -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_light_green"
            android:gravity="center">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/trending_up_icon"
                android:src="@drawable/ic_trending_up"
                app:tint="#10B981"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_85"
            android:textSize="18sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/success_rate"
            android:textSize="12sp"
            android:textColor="#64748B"
            android:gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Habits List Header -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
android:layout_marginBottom="16dp">

<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="@string/your_habits"
    android:textSize="18sp"
    android:textColor="#1E293B"
    android:textStyle="bold"/>

<TextView
    android:id="@+id/tv_sort"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/sort_by_recent"
    android:textSize="12sp"
    android:textColor="#2563EB"
    android:padding="8dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"/>
</LinearLayout>

    <!-- Habit 1: Drink Water - IMPROVED -->
<androidx.cardview.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="12dp"
app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="20dp"
    android:background="#FFFFFF"

    android:clickable="true"
    android:focusable="true">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical">

<!-- Checkbox -->
<CheckBox
    android:id="@+id/cb_water"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:button="@drawable/custom_checkbox"
    android:checked="true"
    android:layout_marginEnd="16dp"/> <!-- Increased margin -->

<!-- Habit Info -->
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/drink_8_glasses_of_water"
        android:textSize="16sp"
        android:textColor="#1E293B"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp"> <!-- Increased margin -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/health"
            android:textSize="12sp"
            android:textColor="#2563EB"
            android:background="@drawable/bg_rounded_tag_blue"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="@string/flame_icon"
                android:src="@drawable/ic_flame"
                app:tint="#F59E0B"
                tools:ignore="TooDeepLayout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_12_days"
                android:textSize="12sp"
                android:textColor="#F59E0B"

                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<!-- More Options -->
<ImageButton
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/ic_more_vertical"
    app:tint="#64748B"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="@string/more_options"/>
</LinearLayout>

    <!-- Progress Bar -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center_vertical"
android:layout_marginTop="16dp"
    android:layout_marginStart="40dp">

<ProgressBar
android:id="@+id/progress_water"
android:layout_width="0dp"
android:layout_height="6dp"
android:layout_weight="1"
style="@style/Widget.AppCompat.ProgressBar.Horizontal"
android:progress="100"
android:progressTint="#06B6D4"
android:backgroundTint="#E2E8F0"
android:layout_marginEnd="12dp"/> <!-- Increased margin -->

<TextView
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="@string/completed"
android:textSize="12sp"
android:textColor="#06B6D4"
/>
    </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Habit 2: Meditation - IMPROVED -->
<androidx.cardview.widget.CardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="12dp"
app:cardCornerRadius="16dp"
app:cardElevation="2dp"
app:cardUseCompatPadding="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/cb_meditation"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:button="@drawable/custom_checkbox"
            android:checked="false"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_10_minute_meditation"
                android:textSize="16sp"
                android:textColor="#1E293B"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mindfulness"
                    android:textSize="12sp"
                    android:textColor="#8B5CF6"
                    android:background="@drawable/bg_rounded_tag_purple"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:contentDescription="@string/flame_icon"
                        android:src="@drawable/ic_flame"
                        app:tint="#F59E0B"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_8_days"
                        android:textSize="12sp"
                        android:textColor="#F59E0B"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_more_vertical"
            app:tint="#64748B"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/more_options"/>
    </LinearLayout>

    <!-- Progress Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:layout_marginStart="40dp">

        <ProgressBar
            android:id="@+id/progress_meditation"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="0"
            android:progressTint="#8B5CF6"
            android:backgroundTint="#E2E8F0"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0_1"
            android:textSize="12sp"
            android:textColor="#64748B" />
    </LinearLayout>
</LinearLayout>
</androidx.cardview.widget.CardView>

    <!-- Bottom Spacer -->
<View
android:layout_width="match_parent"
android:layout_height="24dp"/>
    </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Component -->
<include layout="@layout/layout_bottom_navigation"/>
    </LinearLayout>