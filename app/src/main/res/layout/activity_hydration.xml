<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8FAFC">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydration"
                        android:textSize="28sp"
                        android:textColor="#1E293B"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay healthy, stay hydrated"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded_white"
                    android:src="@drawable/ic_settings"
                    app:tint="#64748B"/>
            </LinearLayout>

            <!-- Water Bottle Visualization -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:background="#FFFFFF"
                    android:gravity="center">

                    <!-- Water Bottle Graphic -->
                    <LinearLayout
                        android:layout_width="120dp"
                        android:layout_height="200dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/bg_water_bottle">

                        <!-- Water Level -->
                        <View
                            android:id="@+id/water_level"
                            android:layout_width="80dp"
                            android:layout_height="150dp"
                            android:background="@drawable/bg_water_fill"
                            android:layout_gravity="bottom"/>

                        <!-- Water Info Overlay -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tv_current_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1500ml"
                                android:textSize="24sp"
                                android:textColor="#1E293B"
                                android:textStyle="bold"
                                android:gravity="center"/>

                            <TextView
                                android:id="@+id/tv_goal_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="of 2500ml"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:gravity="center"
                                android:layout_marginTop="4dp"/>

                            <TextView
                                android:id="@+id/tv_progress_percent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="60% Complete"
                                android:textSize="12sp"
                                android:textColor="#06B6D4"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Add Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btn_add_250"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="+250ml"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rounded_teal"
                    android:drawableStart="@drawable/ic_plus_small"
                    android:drawableTint="#FFFFFF"/>

                <Button
                    android:id="@+id/btn_add_500"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:text="+500ml"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rounded_teal"
                    android:drawableStart="@drawable/ic_plus_small"
                    android:drawableTint="#FFFFFF"/>

                <Button
                    android:id="@+id/btn_add_750"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="+750ml"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rounded_teal"
                    android:drawableStart="@drawable/ic_plus_small"
                    android:drawableTint="#FFFFFF"/>
            </LinearLayout>

            <!-- Manual Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Subtract Button -->
                <ImageButton
                    android:id="@+id/btn_subtract"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_minus"
                    app:tint="#EF4444"
                    android:background="@drawable/bg_rounded_white"
                    android:layout_marginEnd="16dp"/>

                <!-- Add Glass Button -->
                <Button
                    android:id="@+id/btn_add_glass"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Add Glass"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_rounded_teal"
                    android:drawableStart="@drawable/ic_droplets"
                    android:drawableTint="#FFFFFF"
                    android:drawablePadding="8dp"/>

                <!-- Add Button -->
                <ImageButton
                    android:id="@+id/btn_add"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_plus"
                    app:tint="#06B6D4"
                    android:background="@drawable/bg_rounded_white"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Today's Progress -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Progress"
                android:textSize="18sp"
                android:textColor="#1E293B"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Cups Today -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_droplets"
                            app:tint="#06B6D4"
                            android:background="@drawable/bg_circle_light_teal"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_cups_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6/10"
                            android:textSize="16sp"
                            android:textColor="#1E293B"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cups Today"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Progress -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_target"
                            app:tint="#06B6D4"
                            android:background="@drawable/bg_circle_light_teal"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60%"
                            android:textSize="16sp"
                            android:textColor="#1E293B"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Streak -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_award"
                            app:tint="#06B6D4"
                            android:background="@drawable/bg_circle_light_teal"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8 days"
                            android:textSize="16sp"
                            android:textColor="#1E293B"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Streak"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Component -->
    <include layout="@layout/layout_bottom_navigation"/>
</LinearLayout>