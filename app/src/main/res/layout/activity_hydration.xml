<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:paddingTop="24dp">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydration"
                        android:textSize="28sp"
                        android:textColor="#1E3A8A"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stay healthy, stay hydrated"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded_white"
                    android:src="@drawable/ic_settings"
                    app:tint="#666666"/>
            </LinearLayout>

            <!-- Water Bottle Visualization -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="32dp"
                    android:background="#FFFFFF"
                    android:gravity="center">

                    <!-- Water Bottle Container -->
                    <RelativeLayout
                        android:layout_width="140dp"
                        android:layout_height="240dp"
                        android:layout_marginBottom="16dp">

                        <!-- Bottle Background -->
                        <View
                            android:id="@+id/bottle_background"
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bg_bottle_outline" />

                        <!-- Water Fill (positioned at bottom) -->
                        <View
                            android:id="@+id/water_level"
                            android:layout_width="80dp"
                            android:layout_height="0dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/bg_water_fill" />

                        <!-- Bottle Cap -->
                        <View
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignTop="@id/bottle_background"
                            android:layout_marginTop="-10dp"
                            android:background="#E0E0E0" />
                    </RelativeLayout>

                    <!-- Water Info -->
                    <TextView
                        android:id="@+id/tv_current_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0ml"
                        android:textSize="32sp"
                        android:textColor="#1E3A8A"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/tv_goal_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="of 6000ml"
                        android:textSize="16sp"
                        android:textColor="#64748B"
                        android:gravity="center"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_progress_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0% Complete"
                        android:textSize="14sp"
                        android:textColor="#4C6AFD"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="8dp"/>

                    <!-- Reset Bottle Button (only visible when bottle is full) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_reset_bottle"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="16dp"
                        android:text="Reset Bottle"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        app:backgroundTint="#FF5722"
                        app:cornerRadius="20dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="#FFFFFF"
                        app:iconSize="16dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Add Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_250"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="+250ml"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#4C6AFD"
                    app:cornerRadius="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_500"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    android:text="+500ml"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#4C6AFD"
                    app:cornerRadius="12dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_750"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="+750ml"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#4C6AFD"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

            <!-- Manual Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <!-- Subtract Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_subtract"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:icon="@drawable/ic_minus"
                    app:iconTint="#EF4444"
                    app:backgroundTint="#FFFFFF"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="16dp"/>

                <!-- Add Glass Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_glass"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Add Glass"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    app:backgroundTint="#4C6AFD"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_droplets"
                    app:iconTint="#FFFFFF"
                    app:iconSize="20dp"/>

                <!-- Add Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:icon="@drawable/ic_plus"
                    app:iconTint="#4C6AFD"
                    app:backgroundTint="#FFFFFF"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="16dp"/>
            </LinearLayout>

            <!-- Water Reminders -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Water Reminders"
                    android:textSize="18sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_add_reminder"
                    style="@style/Widget.Material3.Button.IconButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    app:icon="@drawable/ic_bell"
                    app:iconTint="#4C6AFD"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:backgroundTint="#FFFFFF"
                    app:strokeColor="#E0E0E0"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

            <!-- Reminders List -->
            <LinearLayout
                android:id="@+id/reminders_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp"/>

            <!-- Today's Progress -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Progress"
                android:textSize="18sp"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <!-- Progress Chart -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hydration Progress"
                        android:textSize="16sp"
                        android:textColor="#1E3A8A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp"/>

                    <com.example.healthapp.HydrationChartView
                        android:id="@+id/hydration_chart"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Cups Today -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_droplets"
                            app:tint="#4C6AFD"
                            android:background="@drawable/bg_circle_light_blue"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_cups_today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/12"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cups Today"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Progress -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_target"
                            app:tint="#4C6AFD"
                            android:background="@drawable/bg_circle_light_blue"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Streak -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_award"
                            app:tint="#4C6AFD"
                            android:background="@drawable/bg_circle_light_blue"
                            android:padding="8dp"/>

                        <TextView
                            android:id="@+id/tv_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 days"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Streak"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Component -->
    <include layout="@layout/layout_bottom_navigation"/>
</LinearLayout>