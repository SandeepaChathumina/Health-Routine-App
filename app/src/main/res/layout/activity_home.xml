<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:paddingTop="24dp">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Top Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="28dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/good_morning"
                        android:textSize="28sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tv_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/let_s_make_today_amazing"
                        android:textSize="16sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded_white"
                    android:src="@drawable/ic_settings"
                    app:tint="#666666"
                    android:contentDescription="@string/settings"/>
            </LinearLayout>

            <!-- Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/today_s_progress"
                            android:textColor="#1A1A1A"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tv_view_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/view_all"
                            android:textColor="#2196F3"
                            android:textSize="14sp"
                            android:padding="8dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>

                    <!-- Progress Circle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginBottom="24dp">

                        <TextView
                            android:id="@+id/tv_progress_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_75"
                            android:textSize="32sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"/>

                        <TextView
                            android:id="@+id/tv_progress_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/complete"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <!-- Stats Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Today's Habits -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_habits_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_6_8"
                                android:textSize="16sp"
                                android:textColor="#2196F3"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/today_s_habits"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp"
                                android:gravity="center"/>
                        </LinearLayout>

                        <!-- Current Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_streak_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_12_days"
                                android:textSize="16sp"
                                android:textColor="#4CAF50"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/current_streak"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp"
                                android:gravity="center"/>
                        </LinearLayout>

                        <!-- Water Intake -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/tv_water_intake"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_1250ml"
                                android:textSize="16sp"
                                android:textColor="#FF9800"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/water_intake"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Actions Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/quick_actions"
                    android:textSize="18sp"
                    android:textColor="#1A1A1A"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tv_edit_actions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textSize="14sp"
                    android:textColor="#2196F3"
                    android:padding="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Reminders Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Reminders"
                            android:textSize="18sp"
                            android:textColor="#1E293B"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_view_all_reminders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textSize="14sp"
                            android:textColor="#2563EB"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_reminders"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="vertical"/>

                    <LinearLayout
                        android:id="@+id/empty_reminders_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calendar"
                            android:alpha="0.5"
                            app:tint="#64748B"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No reminders set"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Set reminders in the Mood page"
                            android:textSize="12sp"
                            android:textColor="#94A3B8"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Actions Grid - Fixed -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- Row 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Add Habit -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_add_habit"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_blue"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_target"
                                    app:tint="#FFFFFF"
                                    android:contentDescription="@string/add_habit"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/add_habit"
                                android:textSize="14sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="12dp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Log Mood -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_log_mood"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_pink"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_heart"
                                    app:tint="#FFFFFF"
                                    android:contentDescription="@string/log_mood"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/log_mood"
                                android:textSize="14sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="12dp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <!-- Drink Water -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_drink_water"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_teal"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_droplets"
                                    app:tint="#FFFFFF"
                                    android:contentDescription="@string/drink_water"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/drink_water"
                                android:textSize="14sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="12dp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- View Stats -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_view_stats"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_green"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_trending_up"
                                    app:tint="#FFFFFF"
                                    android:contentDescription="@string/view_stats"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/view_stats"
                                android:textSize="14sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="12dp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Row 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- BMI Calculator -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_bmi_calculator"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_orange"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_bmi"
                                    app:tint="#FFFFFF"
                                    android:contentDescription="@string/bmi_calculator"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/bmi_calculator"
                                android:textSize="14sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="12dp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Daily Workout -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_daily_workout"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginStart="6dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:padding="16dp">

                            <LinearLayout
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/bg_icon_purple"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_workout"
                                    app:tint="#FFFFFF"
                                    android:contentDescription="@string/daily_workout"/>
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_workout"
                                android:textSize="14sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="12dp"
                                android:gravity="center"/>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </LinearLayout>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Component -->
    <include layout="@layout/layout_bottom_navigation"/>
</LinearLayout>