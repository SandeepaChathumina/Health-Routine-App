<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Date and Time Display -->
    <TextView
        android:id="@+id/tv_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/today_is_present"
        android:textSize="16sp"
        android:textColor="#1E3A8A"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Emoji Selector -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/how_are_you_feeling"
        android:textSize="18sp"
        android:textColor="#1E3A8A"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Emoji Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btn_emoji_excited"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/exite_face"
                android:textSize="48sp"
                android:background="@drawable/bg_emoji_button_pure_white"
                android:layout_margin="4dp"
                android:typeface="normal"
                android:includeFontPadding="false"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.UnelevatedButton"/>

            <Button
                android:id="@+id/btn_emoji_happy"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/happy_face"
                android:textSize="48sp"
                android:background="@drawable/bg_emoji_button_pure_white"
                android:layout_margin="4dp"
                android:typeface="normal"
                android:includeFontPadding="false"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.UnelevatedButton"/>

            <Button
                android:id="@+id/btn_emoji_calm"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/calmface"
                android:textSize="48sp"
                android:background="@drawable/bg_emoji_button_pure_white"
                android:layout_margin="4dp"
                android:typeface="normal"
                android:includeFontPadding="false"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.UnelevatedButton"/>

            <Button
                android:id="@+id/btn_emoji_neutral"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/neutal_face"
                android:textSize="48sp"
                android:background="@drawable/bg_emoji_button_pure_white"
                android:layout_margin="4dp"
                android:typeface="normal"
                android:includeFontPadding="false"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.UnelevatedButton"/>

        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_emoji_tired"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/tired_face"
                android:textSize="48sp"
                android:background="@drawable/bg_emoji_button_pure_white"
                android:layout_margin="4dp"
                android:typeface="normal"
                android:includeFontPadding="false"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.UnelevatedButton"/>

            <Button
                android:id="@+id/btn_emoji_stressed"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/stress_face"
                android:textSize="48sp"
                android:background="@drawable/bg_emoji_button_pure_white"
                android:layout_margin="4dp"
                android:typeface="normal"
                android:includeFontPadding="false"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.UnelevatedButton"/>

            <Button
                android:id="@+id/btn_emoji_sad"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/sad_face"
                android:textSize="48sp"
                android:background="@drawable/bg_emoji_button_pure_white"
                android:layout_margin="4dp"
                android:typeface="normal"
                android:includeFontPadding="false"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.UnelevatedButton"/>

            <Button
                android:id="@+id/btn_emoji_angry"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:text="@string/angry_face"
                android:textSize="48sp"
                android:background="@drawable/bg_emoji_button_pure_white"
                android:layout_margin="4dp"
                android:typeface="normal"
                android:includeFontPadding="false"
                android:gravity="center"
                android:backgroundTint="@android:color/white"
                style="@style/Widget.Material3.Button.UnelevatedButton"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Selected Mood Display -->
    <LinearLayout
        android:id="@+id/selected_mood_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_selected_mood"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selected"
            android:textSize="16sp"
            android:textColor="#1E3A8A"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_selected_mood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/emojihappy"
            android:textSize="18sp"
            android:textColor="#4C6AFD"
            android:textStyle="bold"/>

    </LinearLayout>

    <!-- Note Section -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/add_a_note_optional"
        app:boxCornerRadiusTopStart="12dp"
        app:boxCornerRadiusTopEnd="12dp"
        app:boxCornerRadiusBottomStart="12dp"
        app:boxCornerRadiusBottomEnd="12dp"
        app:boxStrokeColor="#4C6AFD"
        app:hintTextColor="#64748B">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_mood_note"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:maxLines="4"
            android:minLines="2" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/share_what_s_on_your_mind"
        android:textSize="12sp"
        android:textColor="#64748B"
        android:paddingTop="8dp" />

</LinearLayout>
