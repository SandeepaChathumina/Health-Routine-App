<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:paddingTop="24dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="2dp">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_rounded_white"
            android:src="@drawable/ic_arrow_back"
            app:tint="#64748B"
            android:contentDescription="@string/back"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/quick_morning_workout"
            android:textSize="20sp"
            android:textColor="#1E3A8A"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="48dp"/>
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Workout Overview Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workout_overview"
                        android:textSize="18sp"
                        android:textColor="#1E3A8A"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_time"
                                app:tint="#4C6AFD"
                                android:contentDescription="@string/duration"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_10_minutes"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_exercise"
                                app:tint="#4C6AFD"
                                android:contentDescription="@string/exercises"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_8_exercises"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginStart="8dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/a_quick_10_minute_workout_routine_to_get_your_day_started_right"
                        android:textSize="14sp"
                        android:textColor="#64748B"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercises List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/exercises"
                android:textSize="18sp"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Exercise 1: Jumping Jacks -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/exercise1_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_rounded_gray"
                        android:src="@drawable/jumpingjack"
                        android:contentDescription="@string/jumping_jacks"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/jumping_jacks"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_30_seconds"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardio_full_body"
                            android:textSize="12sp"
                            android:textColor="#4C6AFD"
                            android:background="@drawable/bg_rounded_light_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_exercise_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise 2: Push Ups -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/exercise2_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_rounded_gray"
                        android:src="@drawable/pushups"
                        android:contentDescription="@string/push_ups"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/push_ups"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_12_reps"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/strength_chest"
                            android:textSize="12sp"
                            android:textColor="#4C6AFD"
                            android:background="@drawable/bg_rounded_light_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_exercise_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise 3: Squats -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/exercise3_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_rounded_gray"
                        android:src="@drawable/squats"
                        android:contentDescription="@string/squats"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/squats"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_15_reps"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/legs_lower_body"
                            android:textSize="12sp"
                            android:textColor="#4C6AFD"
                            android:background="@drawable/bg_rounded_light_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_exercise_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise 4: Plank -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/exercise4_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_rounded_gray"
                        android:src="@drawable/plank"
                        android:contentDescription="@string/plank"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/plank"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_30_seconds"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/core_abs"
                            android:textSize="12sp"
                            android:textColor="#4C6AFD"
                            android:background="@drawable/bg_rounded_light_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_exercise_4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise 5: Mountain Climbers -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/exercise5_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_rounded_gray"
                        android:src="@drawable/mountainclimbers"
                        android:contentDescription="@string/mountain_climbers"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/mountain_climbers"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_30_seconds"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardio_lower_body"
                            android:textSize="12sp"
                            android:textColor="#4C6AFD"
                            android:background="@drawable/bg_rounded_light_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_exercise_5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise 6: Bicycle crunches -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/exercise6_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_rounded_gray"
                        android:src="@drawable/bicyclecrunches"
                        android:contentDescription="@string/mountain_climbers"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/bicycle_crunches"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_15_reps"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/core_abs"
                            android:textSize="12sp"
                            android:textColor="#4C6AFD"
                            android:background="@drawable/bg_rounded_light_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_exercise_6"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise 7: lunges -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/exercise7_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_rounded_gray"
                        android:src="@drawable/lunges"
                        android:contentDescription="@string/mountain_climbers"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lunges"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_15_reps"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/legs_lower_body"
                            android:textSize="12sp"
                            android:textColor="#4C6AFD"
                            android:background="@drawable/bg_rounded_light_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_exercise_7"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise 8: glutebridges -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#FFFFFF"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/exercise8_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/bg_rounded_gray"
                        android:src="@drawable/glutebridges"
                        android:contentDescription="@string/mountain_climbers"
                        android:layout_marginEnd="16dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/glute_bridges"
                            android:textSize="16sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_15_reps"
                            android:textSize="14sp"
                            android:textColor="#64748B"
                            android:layout_marginTop="4dp"
                            tools:ignore="TooManyViews" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lower_body"
                            android:textSize="12sp"
                            android:textColor="#4C6AFD"
                            android:background="@drawable/bg_rounded_light_blue"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkbox_exercise_8"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:button="@drawable/custom_checkbox"
                        android:checked="false"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Start Workout Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_start_workout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/start_workout"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="#4C6AFD"
                android:elevation="4dp"
                app:icon="@drawable/ic_play"
                app:iconTint="#FFFFFF"
                app:iconPadding="8dp"
                style="@style/Widget.Material3.Button"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>