<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:paddingTop="24dp">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profile"
                    android:textSize="28sp"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold"/>

                <ImageButton
                    android:id="@+id/btn_settings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded_white"
                    android:src="@drawable/ic_settings"
                    app:tint="#64748B"
                    android:contentDescription="@string/settings"/>
            </LinearLayout>

            <!-- User Profile Card - IMPROVED -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#FFFFFF"
                    android:gravity="center">

                    <!-- Avatar -->
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="@drawable/bg_circle_primary"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/user_icon"
                            android:src="@drawable/ic_user"
                            app:tint="#FFFFFF"/>
                    </LinearLayout>

                    <!-- User Info -->
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sarah_johnson"
                        android:textSize="24sp"
                        android:textColor="#1E3A8A"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_user_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 years old"
                        android:textSize="16sp"
                        android:textColor="#64748B"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_user_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not specified"
                        android:textSize="16sp"
                        android:textColor="#64748B"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/tv_join_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/member_since_january_2024"
                        android:textSize="14sp"
                        android:textColor="#94A3B8"/>

                    <!-- Edit Button - IMPROVED -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="@string/edit_profile"
                        android:textColor="#4C6AFD"
                        android:textSize="14sp"
                        android:backgroundTint="#FFFFFF"
                        android:strokeColor="#4C6AFD"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:layout_marginTop="16dp"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Progress Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/your_progress"
                    android:textSize="20sp"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_view_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view_details"
                    android:textSize="14sp"
                    android:textColor="#4C6AFD"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Stats Cards - IMPROVED -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <!-- Total Habits -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_light_blue"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/target_icon"
                                android:src="@drawable/ic_target"
                                app:tint="#4C6AFD"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_total_habits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_12"
                            android:textSize="18sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_habits"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Current Streak -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_light_orange"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/award_icon"
                                android:src="@drawable/ic_award"
                                app:tint="#F59E0B"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_current_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_15_days"
                            android:textSize="18sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/current_streak"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Success Rate -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="20dp"
                        android:background="#FFFFFF">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_circle_light_green"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:contentDescription="@string/trending_up_icon"
                                android:src="@drawable/ic_trending_up"
                                app:tint="#10B981"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_success_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_83"
                            android:textSize="18sp"
                            android:textColor="#1E3A8A"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/success_rate"
                            android:textSize="12sp"
                            android:textColor="#64748B"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Settings Options Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings"
                    android:textSize="20sp"
                    android:textColor="#1E3A8A"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_manage_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manage_all"
                    android:textSize="14sp"
                    android:textColor="#4C6AFD"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <!-- Settings List - IMPROVED -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Account Settings -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_light_gray"
                            android:gravity="center"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/user_icon"
                                android:src="@drawable/ic_user"
                                app:tint="#64748B"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/account_settings"
                                android:textSize="16sp"
                                android:textColor="#1E3A8A"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/manage_your_account_information"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/chevron_right"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#CBD5E1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Notifications -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_light_gray"
                            android:gravity="center"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/bell_icon"
                                android:src="@drawable/ic_bell"
                                app:tint="#64748B"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/notifications"
                                android:textSize="16sp"
                                android:textColor="#1E3A8A"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/manage_notification_preferences"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/chevron_right"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#CBD5E1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Privacy & Security -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:padding="16dp"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_light_gray"
                            android:gravity="center"
                            android:layout_marginEnd="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:contentDescription="@string/shield_icon"
                                android:src="@drawable/ic_shield"
                                app:tint="#64748B"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/privacy_amp_security"
                                android:textSize="16sp"
                                android:textColor="#1E3A8A"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/control_your_data_and_privacy"
                                android:textSize="14sp"
                                android:textColor="#64748B"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:contentDescription="@string/chevron_right"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="#CBD5E1"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <!-- App Version -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/healthflow_v1_0_0"
                android:textSize="14sp"
                android:textColor="#94A3B8"
                android:gravity="center"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Component -->
    <include layout="@layout/layout_bottom_navigation"/>
</LinearLayout>