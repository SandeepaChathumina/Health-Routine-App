<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA"
    android:paddingTop="24dp">

    <!-- Content Area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/your_progress"
                        android:textSize="28sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/track_your_health_journey"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_filter"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_rounded_white"
                    android:contentDescription="@string/filter_icon"
                    android:src="@drawable/ic_filter"
                    app:tint="#666666"/>
            </LinearLayout>

            <!-- Time Period Selector - IMPROVED -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Week Button - Active State -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_week"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="@string/_7_days"
                    android:textColor="#FFFFFF"
                    android:textSize="13sp"
                    android:backgroundTint="#2563EB"
                    style="@style/Widget.Material3.Button"/>

                <!-- Month Button - Inactive State -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_month"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="6dp"
                    android:text="@string/_30_days"
                    android:textColor="#64748B"
                    android:textSize="13sp"
                    android:backgroundTint="#FFFFFF"
                    android:strokeColor="#E2E8F0"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>

                <!-- Year Button - Inactive State -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_year"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="@string/_1_year"
                    android:textColor="#64748B"
                    android:textSize="13sp"
                    android:backgroundTint="#FFFFFF"
                    android:strokeColor="#E2E8F0"
                    style="@style/Widget.Material3.Button.OutlinedButton"/>
            </LinearLayout>

            <!-- Overall Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:background="#FFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overall_health_score"
                        android:textSize="18sp"
                        android:textColor="#1A1A1A"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="16dp"/>

                    <!-- Progress Ring Placeholder -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_health_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_82"
                                android:textSize="36sp"
                                android:textColor="#4CAF50"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/health_score"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginTop="4dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical"
                            android:paddingStart="20dp"
                            tools:ignore="RtlSymmetry">

                            <!-- Mini Progress Bars -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/habits"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="4dp"
                                    android:layout_weight="1"
                                    android:background="#E0E0E0"
                                    android:layout_marginHorizontal="8dp"/>

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_85"
                                    android:textSize="12sp"
                                    android:textColor="#4CAF50"
                                    android:gravity="end"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/water"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="4dp"
                                    android:layout_weight="1"
                                    android:background="#E0E0E0"
                                    android:layout_marginHorizontal="8dp"/>

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_92"
                                    android:textSize="12sp"
                                    android:textColor="#00BCD4"
                                    android:gravity="end"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/mood"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="4dp"
                                    android:layout_weight="1"
                                    android:background="#E0E0E0"
                                    android:layout_marginHorizontal="8dp"/>

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_78"
                                    android:textSize="12sp"
                                    android:textColor="#E91E63"
                                    android:gravity="end"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exercise"
                                    android:textSize="12sp"
                                    android:textColor="#666666"/>

                                <View
                                    android:layout_width="0dp"
                                    android:layout_height="4dp"
                                    android:layout_weight="1"
                                    android:background="#E0E0E0"
                                    android:layout_marginHorizontal="8dp"/>

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:text="@string/_70"
                                    android:textSize="12sp"
                                    android:textColor="#9C27B0"
                                    android:gravity="end"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <!-- Current Streak -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/trending_up_icon"
                            android:src="@drawable/ic_trending_up"
                            app:tint="#FF9800"
                            android:background="@drawable/bg_circle_light_orange"
                            android:padding="6dp"/>

                        <TextView
                            android:id="@+id/tv_current_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_12"
                            android:textSize="20sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/day_streak"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Best Streak -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/award_icon"
                            android:src="@drawable/ic_award"
                            app:tint="#4CAF50"
                            android:background="@drawable/bg_circle_light_green"
                            android:padding="6dp"/>

                        <TextView
                            android:id="@+id/tv_best_streak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_28"
                            android:textSize="20sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/best_streak"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Total Days Active -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp"
                        android:background="#FFFFFF">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:contentDescription="@string/calender_icon"
                            android:src="@drawable/ic_calendar"
                            app:tint="#2196F3"
                            android:background="@drawable/bg_circle_light_blue"
                            android:padding="6dp"/>

                        <TextView
                            android:id="@+id/tv_total_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_156"
                            android:textSize="20sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_days"
                            android:textSize="11sp"
                            android:textColor="#666666"
                            android:gravity="center"
                            android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Detailed Stats by Category -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category_breakdown"
                android:textSize="18sp"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp"/>

            <!-- Habits Stats -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/target_icon"
                            android:src="@drawable/ic_target"
                            app:tint="#2196F3"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/habits"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_85_completion"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/decimal6_8"
                                android:textSize="18sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/avg_per_day"
                                android:textSize="11sp"
                                android:textColor="#666666"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_8"
                                android:textSize="18sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/total_habits"
                                android:textSize="11sp"
                                android:textColor="#666666"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_12"
                                android:textSize="18sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/day_streak"
                                android:textSize="11sp"
                                android:textColor="#666666"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Hydration Stats -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/droplet_emoji"
                            android:src="@drawable/ic_droplets"
                            app:tint="#00BCD4"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/hydration"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_92_of_goal"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_2_3l"
                                android:textSize="18sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/daily_avg"
                                android:textSize="11sp"
                                android:textColor="#666666"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            tools:ignore="TooManyViews">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_9_2"
                                android:textSize="18sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/glasses_day"
                                android:textSize="11sp"
                                android:textColor="#666666"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_6"
                                android:textSize="18sp"
                                android:textColor="#1A1A1A"
                                android:fontFamily="sans-serif-medium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/days_on_track"
                                android:textSize="11sp"
                                android:textColor="#666666"
                                android:layout_marginTop="2dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Mood Stats -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/heart_icon"
                            android:src="@drawable/ic_heart"
                            app:tint="#E91E63"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/mood_journal"
                            android:textSize="16sp"
                            android:textColor="#1A1A1A"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_4_2_5_average"
                            android:textSize="12sp"
                            android:textColor="#4CAF50"
                            android:fontFamily="sans-serif-medium"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/_6"
                                android:textSize="18sp"
                                android:textColor="#1A1A1A"
